# Spotify server credentials (required for all /api/spotify routes)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Optional legacy/public compatibility key used by existing code paths
NEXT_PUBLIC_SPOTIFY_CLIENT_ID=your_spotify_client_id

# Only needed if you use /api/spotify/auth authorization-code flow
SPOTIFY_REDIRECT_URI_DEV=http://localhost:3000/api/spotify/auth/callback
SPOTIFY_REDIRECT_URI_PROD=https://your-domain.com/api/spotify/auth/callback
